function checkStrenght (uint _a) public pure returns (string memory result){
    if (_a > 100){
        return "Greater than 100";
    }else if (_a == 50){
        return "is equal to 50";
    }else{
        return "Less than 100";
    }
    }

        //for loop
        function sum(uint _n) public pure returns (uint){
uint result = 0;

for(uint i = 0; i <= _n; i++){
    result += i;
}
return result;

